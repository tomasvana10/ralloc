{
  "name": "ralloc",
  "version": "0.32.0",
  "private": true,
  "scripts": {
    "cs:add": "changeset",
    "cs:version": "changeset version",
    "lint": "biome check",
    "format": "biome format --write",
    "prepare": "[ -d .git ] && lefthook install || echo \"no lefthook in container\"",
    "predocker": "pnpm run --filter web typegen",
    "dev": "pnpm run predocker && docker compose -f ./docker/compose.dev.yaml up --build",
    "deploy": "docker compose -f ./docker/compose.prod-ci.yaml pull && docker compose -f ./docker/compose.prod-ci.yaml up --build -d",
    "logs": "docker compose -f ./docker/compose.prod-ci.yaml logs -f",
    "stop": "docker compose -f ./docker/compose.prod-ci.yaml stop",
    "restart": "docker compose -f ./docker/compose.prod-ci.yaml restart",
    "deploy-locally": "docker compose -f ./docker/compose.prod-local.yaml up --build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@inquirer/prompts": "^8.2.0",
    "@types/node": "^25.0.9",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "lefthook": "^2.0.15",
    "typescript": "^5.9.3"
  }
}
